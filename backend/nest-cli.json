{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/backend/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "**/*.ejs"
    ],
    "watchAssets": true,
    "webpack": true,
    "tsConfigPath": "apps/backend/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/backend",
  "projects": {
    "backend": {
      "type": "application",
      "root": "apps/backend",
      "entryFile": "main",
      "sourceRoot": "apps/backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/backend/tsconfig.app.json"
      }
    },
    "goods": {
      "type": "application",
      "root": "apps/goods",
      "entryFile": "main",
      "sourceRoot": "apps/goods/src",
      "compilerOptions": {
        "tsConfigPath": "apps/goods/tsconfig.app.json"
      }
    },
    "microservices-endpoints": {
      "type": "library",
      "root": "libs/microservices-endpoints",
      "entryFile": "index",
      "sourceRoot": "libs/microservices-endpoints/src",
      "compilerOptions": {
        "tsConfigPath": "libs/microservices-endpoints/tsconfig.lib.json"
      }
    },
    "microservices": {
      "type": "library",
      "root": "libs/microservices",
      "entryFile": "index",
      "sourceRoot": "libs/microservices/src",
      "compilerOptions": {
        "tsConfigPath": "libs/microservices/tsconfig.lib.json"
      }
    },
    "exceptions": {
      "type": "library",
      "root": "libs/exceptions",
      "entryFile": "index",
      "sourceRoot": "libs/exceptions/src",
      "compilerOptions": {
        "tsConfigPath": "libs/exceptions/tsconfig.lib.json"
      }
    },
    "models": {
      "type": "library",
      "root": "libs/models",
      "entryFile": "index",
      "sourceRoot": "libs/models/src",
      "compilerOptions": {
        "tsConfigPath": "libs/models/tsconfig.lib.json"
      }
    },
    "dto": {
      "type": "library",
      "root": "libs/dto",
      "entryFile": "index",
      "sourceRoot": "libs/dto/src",
      "compilerOptions": {
        "tsConfigPath": "libs/dto/tsconfig.lib.json"
      }
    },
    "goods-unloader": {
      "type": "application",
      "root": "apps/goods-unloader",
      "entryFile": "main",
      "sourceRoot": "apps/goods-unloader/src",
      "compilerOptions": {
        "tsConfigPath": "apps/goods-unloader/tsconfig.app.json"
      }
    },
    "offers-unloader": {
      "type": "application",
      "root": "apps/offers-unloader",
      "entryFile": "main",
      "sourceRoot": "apps/offers-unloader/src",
      "compilerOptions": {
        "tsConfigPath": "apps/offers-unloader/tsconfig.app.json"
      }
    }
  }
}